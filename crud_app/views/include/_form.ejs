 
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Inchara Gujjar">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="phonenumber" class="text-light">Phone Number</label>
            <input type="text" name="phonenumber" value="" placeholder="91+">
            </div>
            <div class="form-group">
                <label for="numberofpeople" class="text-light">Number Of People</label>
                <input type="text" name="numberofpeople" value="" placeholder="Enter number of people" >
            </div>
           
            <div class="form-group">
                <label for="time" class="text-light">Time</label>
                <input type="text" name="time" value="" placeholder="8:00pm" >
            </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>